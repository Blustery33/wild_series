{% extends 'base.html.twig' %}

{% block title %}Saison numéro {{ season.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3 poster" src="{{program.poster}}" alt="{{ program.title }} poster" width="20%">
        <div class="media-body">
            <h1 class="mt-0">Saison {{ season.number }} de {{ program.title }}</h1>
            <p>{{ season.description }}</p>
            <p>Année de sortie : {{ season.year }}</p>
            <p>Liste des épisodes</p>
            <ul>
                {% for episode in season.episodes %}
                    <li>
                        Episode {{ episode.number }} : {{ episode.title }} </br>

                        <p>Synopsis : {{ episode.synopsis }}</p>
                    </li>
                    <a href="{{ path('program_episode_show', {"slug": program.slug, "season_id": season.id, "episode_slug": episode.slug})}}">Lien vers l'épisode</a>
                {% endfor %}
            </ul>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>

{% endblock %}
